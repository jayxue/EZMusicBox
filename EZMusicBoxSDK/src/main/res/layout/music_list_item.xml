<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/item_border">

    <ImageView
        android:id="@+id/imageViewMusicIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp" 
        android:src="@drawable/music_downloaded"
        android:background="#FBCAF9">
    </ImageView>
        
    <TextView
    	android:id="@+id/textViewMusicItem"    
    	android:layout_width="match_parent"
		android:layout_height="72dp"
    	android:padding="2dp"
    	android:textSize="14sp"
    	android:maxLines="5" 
    	android:ellipsize="marquee"    
    	android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingStart="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/expandableListPreferredItemPaddingLeft"
    	android:textAppearance="?android:attr/textAppearanceLarge"
    	android:gravity="center_vertical"
    	android:background="#FFEDFE">
	</TextView>
</LinearLayout>